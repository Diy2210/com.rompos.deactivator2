<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="server"
            type="net.compoza.deactivator.db.Server"/>
        <variable
            name="item"
            type="net.compoza.deactivator.mpp.model.PluginModel"/>
        <variable
            name="handler"
            type="net.compoza.deactivator.mpp.model.PluginViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseSwitchCompatOrMaterialXml">

        <TextView
            android:id="@+id/pluginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@+id/pluginState"
            android:lines="2"
            android:maxLines="2"
            android:text="@{item.title}"
            android:textSize="18sp"/>
        <Switch
            android:id="@+id/pluginState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:width="80sp"
            android:checked="@{item.status}"
            android:onClick="@{() -> handler.setStatus(server, item)}"/>
    </RelativeLayout>

</layout>